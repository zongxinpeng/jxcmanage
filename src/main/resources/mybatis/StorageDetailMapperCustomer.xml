<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxc.jxcmanage.code.mapper.StorageDetailMapper">
  <resultMap id="CustomBaseResultMap" type="com.jxc.jxcmanage.code.entity.StorageDetail">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="supplier_id" jdbcType="BIGINT" property="supplierId" />
    <result column="product_id" jdbcType="BIGINT" property="productId" />
    <result column="product_code" jdbcType="VARCHAR" property="productCode" />
    <result column="price" jdbcType="DECIMAL" property="price" />
    <result column="count" jdbcType="BIGINT" property="count" />
    <result column="amount" jdbcType="DECIMAL" property="amount" />
    <result column="batch" jdbcType="VARCHAR" property="batch" />
    <result column="note" jdbcType="VARCHAR" property="note" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="created_by" jdbcType="VARCHAR" property="createdBy" />
    <result column="updated_by" jdbcType="VARCHAR" property="updatedBy" />
    <result column="created_date" jdbcType="TIMESTAMP" property="createdDate" />
    <result column="updated_date" jdbcType="TIMESTAMP" property="updatedDate" />
  </resultMap>
  
	<insert id="insertBatch" parameterType="com.jxc.jxcmanage.dto.StorageDetailDto">
		INSERT INTO storage_detail (
		supplier_id,
		product_id,
		product_code,
		price,
		count,
		amount,
		batch,
		note,
		`status`,
		created_by,
		updated_by,
		created_date,
		updated_date)
		VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(
			#{item.supplierId},
			#{item.productId},
			#{item.productCode},
			#{item.price},
			#{item.count},
			#{item.amount},
			#{item.batch},
			#{item.note},
			#{item.status},
			#{item.createdBy},
			#{item.updatedBy},
			#{item.createdDate},
			#{item.updatedDate}
			)
		</foreach>
	</insert>
	<select id="list" resultMap="CustomBaseResultMap">
	SELECT * FROM storage_detail
	<where>
		<if test="supplier_id != null">
			AND supplier_id = #{supplierId}
		</if>
		<if test="product_id != null">
			AND product_id = #{productId}
		</if>
		<if test="product_code != null">
			AND product_code like concat('%', trim(#{productCode}), '%')
		</if>
		<if test="status != null">
			AND `status` = #{status}
		</if>
	</where>
	</select>
</mapper>